?>
<div class="review-top no-reviews">
    <div class="button-write-review">
        <?php if ( !$this->helper('detailedreview')->isUserAbleToWriteReview() ): ?>
        <span class="error"><?php $this->__('You are not Allowed to Write a Review.'); ?></span>
        <?php else: ?>
        <?php $redirectUrl = $currentUrl  . $this->helper('detailedreview')->getCurrentUrlWithNewParam('show_popup','1'); ?>
        <span><?php echo $this->__('Tell us what you think about this item!') ?></span>
        <input type="hidden" value="<?php echo htmlspecialchars($redirectUrl); ?>" />
        <input type="hidden" value="<?php echo $this->helper('core/url')->getEncodedUrl($redirectUrl);?>" />
        <input type="button" class="review-dialog" value="<?php echo $this->__('Write A Review') ?>" />
        <?php endif; ?>
    </div>
</div>