<?xml version="1.0"?>
<layout version="0.1.0">
    <Myorders_payment_success translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_success" name="checkout.success" template="Myorders/success.phtml"/>
        </reference>
    </Myorders_payment_success>
    <Myorders_payment_failure translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_failure" name="checkout.failure" template="Myorders/failure.phtml"/>
        </reference>
    </Myorders_payment_failure>
</layout>